@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center my-5">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 text-primary mb-4">Welcome to Our Bookstore!</h1>
            <p class="lead">Explore a world of knowledge, stories, and inspiration.</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Discover Authors</h5>
                    <p class="card-text">Meet the authors who create the stories and knowledge you love to read. Explore their works!</p>
                    <a href="/Author" class="btn btn-primary">Browse Authors</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Explore Our Books</h5>
                    <p class="card-text">Dive into thousands of books in all genres. From fiction to non-fiction, find your next great read.</p>
                    <a href="/Book" class="btn btn-primary">Browse Books</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Our Publishers</h5>
                    <p class="card-text">Discover the publishers behind the books you love. Explore their catalogs and find new releases.</p>
                    <a href="/Publisher" class="btn btn-primary">Browse Publishers</a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h2 class="display-5 text-success">Join Our Community!</h2>
        <p class="lead">Sign up to stay updated on new book releases, exclusive deals, and events.</p>
        <a href="/Account/Register" class="btn btn-success btn-lg">Sign Up Now</a>
    </div>
</div>

